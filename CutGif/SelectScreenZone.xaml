<Window x:Class="CutGif.SelectScreenZone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CutGif"
        mc:Ignorable="d"
        Title="SelectScreenZone" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="None">
    <Grid>
        <Grid.Background>
            <ImageBrush x:Name="bgImage" Stretch="UniformToFill"/>
        </Grid.Background>

        <Canvas x:Name="overlay"/>
    </Grid>
</Window>
