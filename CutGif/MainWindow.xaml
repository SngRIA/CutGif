<Window x:Class="CutGif.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CutGif"
        mc:Ignorable="d"
        Title="MainWindow" Height="90" Width="400" ResizeMode="NoResize">
    <Grid Margin="5">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="buttonStart" 
                    Width="50" 
                    Content="START" 
                    Click="ButtonStartRecord"></Button>
            <Button Width="50" 
                    Content="SETTINGS" 
                    Click="ButtonOpenSettings"></Button>
            <ProgressBar x:Name="progressBar" Width="284"/>
        </StackPanel>
    </Grid>
</Window>
